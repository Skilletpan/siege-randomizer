{
  "name": "siege-randomizer",
  "private": true,
  "type": "module",
  "version": "2.0.0",
  "scripts": {
    "dev": "vite",
    "host": "vite --host",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "workflow-build": "act pull_request -W ./.github/workflows/build.yaml",
    "workflow-build-artifact": "act workflow_call -W ./.github/workflows/build.yaml --artifact-server-path .artifacts",
    "workflow-deploy": "act -W ./.github/workflows/deploy.yaml --artifact-server-path .artifacts"
  },
  "dependencies": {
    "@mdi/font": "7.4.47",
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "pinia": "^2.3.0",
    "roboto-fontface": "*",
    "vue": "^3.5.26",
    "vue-router": "^4.5.0",
    "vuetify": "^3.11.8"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-typescript": "^14.7.0",
    "@vue/tsconfig": "^0.5.1",
    "npm-run-all2": "^8.0.4",
    "sass": "1.77.8",
    "sass-embedded": "^1.77.8",
    "typescript": "^5.7.0",
    "unplugin-fonts": "^1.1.1",
    "unplugin-vue-components": "^31.0.0",
    "vite": "^6.2.1",
    "vite-plugin-vuetify": "^2.0.3",
    "vue-tsc": "^3.2.4"
  }
}
